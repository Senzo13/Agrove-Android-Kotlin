<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.myPlants.MesPlantesAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listePlants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_plantr">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_plant_1"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/green_plantr"
                android:src="@color/fui_transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_plant_2"
                android:layout_width="55dp"
                android:layout_height="45dp"

                app:layout_constraintStart_toEndOf="@id/iv_plant_1"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/green_plantr"
                android:src="@color/fui_transparent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_plant_3"
                android:layout_width="55dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toEndOf="@id/iv_plant_2"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/green_plantr"
                android:src="@color/fui_transparent"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_plant_4"
                android:layout_width="55dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toEndOf="@id/iv_plant_3"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/green_plantr"
                android:src="@color/fui_transparent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>