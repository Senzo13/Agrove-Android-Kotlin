                            android:layout_marginStart="20dp"
                            android:text="@string/mes_potagers"
                            android:textColor="@color/light_black_plantr"
                            android:textSize="13sp"
                            app:layout_constraintStart_toEndOf="@id/iv_jardiniere"
                            app:layout_constraintTop_toTopOf="@id/iv_jardiniere"
                            app:layout_constraintBottom_toBottomOf="@id/iv_jardiniere"/>

                        <Spinner
