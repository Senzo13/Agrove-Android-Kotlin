<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.myPlants.MesPlantesAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_team_click"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:clipToPadding="false"
        android:background="@color/extra_extra_grey_plantr"
        android:paddingStart="10dp"
        android:paddingTop="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_mes_plantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.8"
        app:cardBackgroundColor="@color/white_plantr"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_team"
        android:layout_width="match_parent"
        android:paddingBottom="35dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_baseline_remove_24"
                        android:background="@drawable/round_gardeners_ico"
                        android:scaleType="centerInside"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_avatar_member"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@color/white_plantr"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/gardenerbackground"
            android:layout_marginTop="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_sub"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_sub"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="1"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar_member"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/green_plantr"
                android:inputType="textMultiLine|textImeMultiLine|textNoSuggestions"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                tools:text="John Doe Subscribe" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>